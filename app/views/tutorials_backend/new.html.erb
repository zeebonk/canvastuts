<h2>New tutorial</h2>

<% form_for(@tutorial, :url => '/backend/tutorials/create', :html => {:multipart => true}) do |f| %>
	<%= f.error_messages %>

	<ul>
		<li>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</li>
		<li>
			<%= f.label :image %>
			<%= f.file_field :image %>
		</li>
    <li>
			<%= f.label :live %>
			<%= f.check_box :live %>
		</li>
		<li>
			<%= f.label :category_id %>
			<%= f.select :category_id, options_from_collection_for_select(Category.all, 'id', 'name') %>
		</li>
		<li>
			<%= f.label :description %>
			<%= f.text_area :description %>
		</li>
		<li>
			<%= f.label :content %>
			<%= f.text_area :content, :class=>'content' %>
		</li>
	</ul>

	<%= f.submit 'Create', :class=>'submit' %>
<% end %>
