<h2>Editing tutorial</h2>

<% form_for(@tutorial, :url => "/backend/tutorials/#{@tutorial.id}/update", :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
	
	<ul>
		<li>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</li>
		<li>
			<%= f.label :image %>
			<%= image_tag "./230x220/#{@tutorial.image}" if @tutorial.image != nil %>
			<%= f.file_field :image %>
		</li>
    <li>
			<%= f.label :live %>
			<%= f.check_box :live, :class=>'small' %>
		</li>
		<li>
			<%= f.label :category_id %>
			<%= f.select :category_id, options_from_collection_for_select(Category.all, 'id', 'name', @tutorial.category_id) %>
		</li>
		<li>
			<%= f.label :description %>
			<%= f.text_area :description %>
		</li>
		<li>
			<%= f.label :content %>
			<%= f.text_area :content, :class=>'content' %>
		</li>
  </ul>
		
	<%= f.submit 'Update', :class=>'submit' %>	
<% end %>
