<h2>Listing tutorials</h2>

<%= link_to 'New tutorial', "/backend/tutorials/new" %>

<table>
  <tr>
    <th>Live</th>
    <th>Title</th>
    <th>Category</th>
    <th>Author</th>
		<th></th>
		<th></th>
  </tr>

  <% @tutorials.each do |tutorial| %>
    <tr>
      <td><%= boolean_icon_tag(tutorial.live) %></td>
      <td><%=h tutorial.title %></td>
      <td><%=h tutorial.category.name %></td>
      <td><%=h tutorial.administrator.username %></td>
      <td><%= link_to 'Edit', "/backend/tutorials/#{tutorial.id}/edit" %></td>
      <td><%= link_to 'Destroy', "/backend/tutorials/#{tutorial.id}/destroy", :confirm => 'Are you sure?' %></td>
    </tr>
  <% end %>
  
</table>